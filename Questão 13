#include<stdlib.h>
#include<stdio.h>

int main(void) {
int q;
float *x;
float aux;
printf("diga a quantidade de valores:");
scanf("%d", &q);
x = malloc(q*sizeof(float));
for (int i = 0; i<q; i++){
printf(" %dÂ°:", i+1);
scanf("%f",&x[i]);
}
for (int a =0; a<q; a++){
for(int b=0; b<q; b++){
if(a==0){
if(x[a] > x[b]){
aux = x[b];
x[b]= x[a];
x[a]=aux;
}
}
else {
if((x[a] < x[b]) && (x[a] < x[a-1]) ){
aux = x[b];
x[b]= x[a];
x[a]=aux;
}
}
}
}
printf("ordem crescente: \n");
for (int d = 0; d<q; d++){
printf("%f \n", x[d]);
}
free(x);
return 0;
}
